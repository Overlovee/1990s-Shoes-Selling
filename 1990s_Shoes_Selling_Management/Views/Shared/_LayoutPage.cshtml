<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/site.css">
    <title>@ViewBag.Title</title>
</head>
<body>
    @RenderPage("header.cshtml")

    <div class="content">
        @RenderBody()
    </div>

    @RenderPage("footer.cshtml")

    <div class="blur-screen"></div>

    <script src="https://kit.fontawesome.com/bfc21e4b01.js" crossorigin="anonymous"></script>
    <script>
        // Lấy phần tử "nav-item" và "blur-screen"
        const navItem = document.querySelectorAll('.nav-item');
        const blurScreen = document.querySelector('.blur-screen');
        // Thêm sự kiện "mouseover" cho phần tử "nav-item"
        for (const iterator of navItem) {
            iterator.addEventListener('mouseover', () => {
                blurScreen.style.visibility = 'visible';
                iterator.addEventListener('mouseout', () => {
                    blurScreen.style.visibility = 'hidden';
                });
            });
        }
    </script>
    <script>
        var searchInput = document.getElementById("search-input");
        var searchFrame = document.querySelector(".search-frame");
        var searchBox = document.querySelector(".search-box");
        searchBox.style.borderRadius = "10px 10px 0 0";
        // Lắng nghe sự kiện input trên input
        searchInput.addEventListener("input", function () {
            if (searchInput.value.trim() !== "") {
                searchFrame.style.display = "block";
                
                searchBox.style.backgroundColor = "#efefef";
            } else {
                searchFrame.style.display = "none";
                searchBox.style.backgroundColor = "transparent";
            }
        });
    </script>
</body>
</html>
